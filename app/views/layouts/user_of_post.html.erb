<a title="Show" href="<%= user_path(author) %>">

  <%= image_tag(author.photo || '') %>
  <div>
    <h3><%= author.name %></h3>
    <p>Number of posts: <%= author.posts_counter || 0 %></p>
  </div>
</a>
<% if user_signed_in? %>
<%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
<% else %>
 <%= link_to "Login", new_user_session_path %>
<% end %>
